{{>layout/header}}

<h1>게시글 등록 페이지</h1>
<hr>

<div class="col-md-12">
	<div class="col-md-4">
		<form>
			<div class="form-group">
				<label for="title">제목</label>
				<input id="title" class="form-control" type="text" placeholder="제목을 입력하세요">
			</div>
			
			<div class="form-group">
				<label for="author">작성자</label>
				<input id="author" class="form-control" type="text" placeholder="작성자를 입력하세요">
			</div>
			
			<div class="form-group">
				<label for="content">내용</label>
				<textarea id="content" class="form-control" placeholder="내용을 입력하세요"></textarea>
			</div>
		</form>
				
		<button type="button" class="btn btn-primary" id="btnSave">등록</button>
		<a href="/" role="button" class="btn btn-secondary">취소</a>
	</div>
</div>
	
{{>layout/footer}}