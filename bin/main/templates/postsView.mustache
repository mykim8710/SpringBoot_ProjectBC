{{>layout/header}}

<h1>#{{posts.id}}번 게시글</h1>
<hr>

<div class="col-md-12">
	<div class="col-md-4">
		<form>
			<div class="form-group">
				<label for="id">글번호</label>
				<input id="id" class="form-control" type="text" value="{{posts.id}}" readonly="readonly">
			</div>
		
			<div class="form-group">
				<label for="title">제목</label>
				<input id="title" class="form-control" type="text" value="{{posts.title}}" readonly="readonly">
			</div>
			
			<div class="form-group">
				<label for="author">작성자</label>
				<input id="author" class="form-control" type="text" value="{{posts.author}}" readonly="readonly">
			</div>
			
			<div class="form-group">
				<label for="content">내용</label>
				<textarea id="content" class="form-control" readonly="readonly">{{posts.content}}</textarea>
			</div>
		</form>
		
		<a href="/" role="button" class="btn btn-secondary">목록</a>
		<a href="/posts/update/{{posts.id}}" role="button" class="btn btn-success">수정</a>
		<button type="button" class="btn btn-danger" id="btnDelete">삭제</button>
		
	</div>
</div>
	
{{>layout/footer}}