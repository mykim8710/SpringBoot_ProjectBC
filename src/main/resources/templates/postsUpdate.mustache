{{>layout/header}}

<h1>#{{posts.id}}번 게시글 수정 페이지</h1>
<hr>

<div class="col-md-12">
	<div class="col-md-4">
		<form>
			<div class="form-group">
				<label for="id">글번호</label>
				<input id="id" class="form-control" type="text" value="{{posts.id}}" readonly="readonly">
			</div>
			
			<div class="form-group">
				<label for="title">제목</label>
				<input id="title" class="form-control" type="text" value="{{posts.title}}">
			</div>
			
			<div class="form-group">
				<label for="author">작성자</label>
				<input id="author" class="form-control" type="text" value="{{posts.author}}" readonly="readonly">
			</div>
			
			<div class="form-group">
				<label for="content">내용</label>
				<textarea id="content" class="form-control">{{posts.content}}</textarea>
			</div>
		</form>
				
		<button type="button" class="btn btn-success" id="btnUpdate">수정</button>
		<a href="/posts/select/{{id}}" role="button" class="btn btn-secondary">취소</a>
	</div>
</div>
	
{{>layout/footer}}